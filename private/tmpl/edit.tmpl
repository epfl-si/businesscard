	<hr>
	
	<table width="99%" border="0" class=gray_bg>
	 <tr>
		<td width="30%" valign="top"><span class="blue bold">1</span> <b><TMPL_VAR NAME=label_path></b>:</td>
		<td>
			<input id="path1" type="text" name="path1"  value="<TMPL_VAR NAME=path1>" size=48 <TMPL_VAR NAME=path1_alert>> 
			<a href="#"> <img id="path1_img" src="<TMPL_VAR NAME=path1_img>" style="height: 20px;" onclick="toggleVis('path1')"></a>
			<input type="hidden" id="path1_hide" name="path1_hide"  value="<TMPL_VAR NAME=path1_hide>">
		
			<br>
			<input id="path2" type="text" name="path2"  value="<TMPL_VAR NAME=path2>" size=48 <TMPL_VAR NAME=path2_alert>> 
			<a href="#"> <img id="path2_img" src="<TMPL_VAR NAME=path2_img>" style="height: 20px;" onclick="toggleVis('path2')"></a>
			<input type="hidden" id="path2_hide" name="path2_hide"  value="<TMPL_VAR NAME=path2_hide>">

			<br>
			<input id="path3" type="text" name="path3"  value="<TMPL_VAR NAME=path3>" size=48 <TMPL_VAR NAME=path3_alert>> 
			<a href="#"> <img id="path3_img" src="<TMPL_VAR NAME=path3_img>" style="height: 20px;" onclick="togglePathShow('path3')" ></a>
			<input type="hidden" id="path3_hide" name="path3_hide"  value="<TMPL_VAR NAME=path3_hide>">
			
			<br>
			<input id="path4" type="text" name="path4"  value="<TMPL_VAR NAME=path4>" size=48 <TMPL_VAR NAME=path4_alert>> 

		</td>
	 </tr>
	<tr>
		<td><span class='blue bold'>2</span> <TMPL_VAR NAME=label_title> </td>
		<td><input id=titre name=titre value="" size=48 ></td>
	<tr>
		<td><b><TMPL_VAR NAME=label_firstname></b> </td>
		<td><input id=pnom name=firstname value="<TMPL_VAR NAME=firstname>"" size=48 ></td>
	<tr>
		<td><b><TMPL_VAR NAME=label_name></b> </td>
		<td><input id=nom name=name value="<TMPL_VAR NAME=name>" size=48 ></td>
	<tr>
		<td><TMPL_VAR NAME=label_function> </td>
		<td><input id=fonc1 name=fonction1 value="<TMPL_VAR NAME=fonction1>" size=48 ></td>
	<tr>
		<td> </td>
		<td><input id=fonc2 name=fonction2 value="<TMPL_VAR NAME=fonction2>" size=48 ></td>
	<tr>
		<td><span class='blue bold'>3</span> <TMPL_VAR NAME=label_phone> </td>
		<td><input id=tel name=phone1 value="<TMPL_VAR NAME=phone1>" size=48 ></td>
	<tr>
		<td> </td>
		<td><input id=mobile name=phone2 value="<TMPL_VAR NAME=phone2>" size=48 ></td>
	<tr>
		<td>Mail </td>
		<td><input id=email name=email value="<TMPL_VAR NAME=email>" size=48 ></td>
	</table>
		
	<div class="bold" style="margin-top: 15px;"><span class='blue'>4</span> <TMPL_VAR NAME=label_type></div>
	<div style="width: 30%; float: left;">
		<select name="card_type" onchange="toggleTypeCV(this.options[this.selectedIndex].value, '<TMPL_VAR NAME=mailid>');">
		<option value="adresse" <TMPL_VAR NAME=card_type_adresse>>Adresse EPFL</option>
		<option value="people" <TMPL_VAR NAME=card_type_people> >Page people</option>
		<option value="web" <TMPL_VAR NAME=card_type_web> >Site web personnel</option>
		</select>
	</div>

	<div id="display_adresse" style="display: <TMPL_IF NAME=card_type_adresse>block;<TMPL_ELSE>none;</TMPL_IF> width: 70%; float: left;">
		<input id="adresse" name="adresse" value="<TMPL_VAR NAME=adresse>" size="42" <TMPL_VAR NAME=adresse_alert>>
	</div>
	<div id="display_people" style="display: <TMPL_IF NAME=card_type_people>block;<TMPL_ELSE>none;</TMPL_IF> width: 70%; float: left;">
		people.epfl.ch/<TMPL_VAR NAME=mailid>
	</div>
	<div id="display_web" style="display: <TMPL_IF NAME=card_type_webe>block;<TMPL_ELSE>none;</TMPL_IF> width: 70%; float: left;">
	  <input name="web" value="<TMPL_VAR NAME=web>"  size="48">
	</div>
	
	<br>
	<div style="margin-top: 20px;">
	<p><b>Remarques :</b> (max 255 car) <br>
	<br><textarea name=comments rows=3 style="width: 75%;"><TMPL_VAR NAME=comments></textarea>
	<hr>
	<div style="display: flex; justify-content: space-between; width: 60%;">
		<div style="flex: 1;">
			<button name="delete" class="bigger bold" onclick="
			if (confirm ('<TMPL_VAR NAME=delete_confirm>')) {
				location.href='/delcmd?nocmd=<TMPL_VAR NAME=nocmd>&notif=1';
				return false;
			} else {
			 return false;
			}"><TMPL_VAR NAME=delete_label>
			</button>
		</div>
		<div style="flex: 1;">
			<button name="submit" class="bigger bold"><TMPL_VAR NAME=show></button>
		</div>
	</div>
</form>
	
