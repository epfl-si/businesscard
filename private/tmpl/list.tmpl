<div style="padding: 20px;">

	<TMPL_IF NAME=cards_loop>
		<div class="bigger bold"><TMPL_VAR NAME=orders_label></div>
		<table width=100%>
		<tr class="bold gray_bg">
			<td class="gray_bg">Commande</td>
			<td class="gray_bg">Date</td>
			<td class="gray_bg">Nom Prénom</td>
			<td class="gray_bg">Quantité</td>
			<td class="gray_bg">Etat</td>
		</tr>
		<TMPL_LOOP NAME=cards_loop>
			<TMPL_IF NAME=action>
